<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HaushaltsHeld">
        
        <!-- Login Activity (Main Entry Point) -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.HaushaltsHeld">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register Activity -->
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:label="@string/register"
            android:theme="@style/Theme.HaushaltsHeld" />

        <!-- Dashboard Activity -->
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:exported="false"
            android:label="@string/dashboard"
            android:theme="@style/Theme.HaushaltsHeld" />

        <!-- Create Group Activity -->
        <activity
            android:name=".ui.group.CreateGroupActivity"
            android:exported="false"
            android:label="@string/create_group"
            android:theme="@style/Theme.HaushaltsHeld" />

        <!-- Join Group Activity -->
        <activity
            android:name=".ui.group.JoinGroupActivity"
            android:exported="false"
            android:label="@string/join_group"
            android:theme="@style/Theme.HaushaltsHeld" />

        <!-- Calendar Activity -->
        <activity
            android:name=".ui.calendar.CalendarActivity"
            android:exported="false"
            android:label="@string/calendar"
            android:theme="@style/Theme.HaushaltsHeld"
            android:parentActivityName=".ui.dashboard.DashboardActivity" />

    </application>

</manifest>